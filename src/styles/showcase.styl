.sc-panel-space-small
  padding 10px 0

a.uk-thumbnail
  &:hover, &:focus
    background-color white

a.uk-thumbnail
  &.selected
    background-color beige
    &:hover, &:focus
      background-color beige
  .sale
    color red
    text-decoration: line-through
    
.uk-form-width-large
  width 280px

[showcase=""]
  background-color white
  padding-left 10px
  padding-right 10px
  min-height 700px

.sc-navbar
  padding-top 15px

.uk-navbar
  position relative
  .uk-button-muted
    position absolute
    z-index 2
    top 5px

.uk-navbar
  background transparent
  border 0
  .uk-navbar-nav
    li
      &.focus
        color white

      a
        color white
        border-radius 0
        text-shadow none
        padding 0 50px
        height 34px
        line-height: 34px
        &.green
          background #22BB8C

        i
          margin-right 10px

thumbnail
  .uk-thumbnail
    border-radius 0
    padding 10px
  button
    border-radius 0!important

showcase-search
  .uk-form
    input
      margin-right -4px
      border-radius 0!important
    button
      background #2858B7!important
      border-radius 0!important
      padding-left 30px!important
      padding-right 30px!important

dir-pagination-controls
  margin-bottom 20px
  z-index: 0
  ul.uk-pagination
    display: inline-block
    li
      vertical-align: sub


.uk-thumbnail-caption
  padding 5px 0

.thumbnail-name
  margin-top 5px
  text-transform: uppercase
  font-size 20px
  font-weight 500

showcase-per-page
  position: relative
  z-index: 2
  ul.uk-pagination
    display inline-block
    position relative
    top -5px

    li
      cursor pointer
